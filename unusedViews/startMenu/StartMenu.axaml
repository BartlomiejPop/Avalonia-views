<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GetStartedApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GetStartedApp.Views.StartMenu"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Start Menu"
        Background="#303030">

    <Window.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Window.DataContext>

 <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="20" Grid.Row="0">
            <!-- <Image Source="avares://GetStartedApp/Resources/logo_shadow.png" Width="100" Height="100" /> -->
            <TextBlock Text="PowerHID" Foreground="White" FontSize="48" VerticalAlignment="Center" Margin="20,0,0,0" />
        </StackPanel>

        <!-- Buttons -->
<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Spacing="20" Margin="20">
    <!-- Start Button -->
    <Button Content="{Binding Greeting, FallbackValue='KLAWIATURA'}"
            Width="300" Height="300" FontWeight="Bold" FontSize="24"
            Background="#FFC200" Foreground="Black"
            Command="{Binding NavigateToKeyboardCommand}"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        <Button.Styles>
            <Style Selector="Button">
                <Setter Property="CornerRadius" Value="10" />
            </Style>
        </Button.Styles>
    </Button>

    <!-- Settings Button -->
    <Button Content="{Binding SettingsText, FallbackValue='USTAWIENIA'}"
            Width="300" Height="300" FontWeight="Bold" FontSize="24"
            Background="#54008B" Foreground="#EDEDED"
            Command="{Binding NavigateToSettingsCommand}"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        <Button.Styles>
            <Style Selector="Button">
                <Setter Property="CornerRadius" Value="10" />
            </Style>
        </Button.Styles>
    </Button>

    <!-- Language Button -->
    <Button Content="{Binding LanguageText, FallbackValue='JÄ˜ZYK/LANGUAGE'}"
            Width="300" Height="300" FontWeight="Bold" FontSize="24"
            Background="#FF6F00" Foreground="White"
            Command="{Binding NavigateToLanguageCommand}"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        <Button.Styles>
            <Style Selector="Button">
                <Setter Property="CornerRadius" Value="10" />
            </Style>
        </Button.Styles>
    </Button>
</StackPanel>



        <!-- Version Info -->
        <TextBlock Text="Version 1.0.1b" Foreground="#AAAAAA" FontSize="14"
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20"
                   Grid.Row="2" />
    </Grid>
</Window>
